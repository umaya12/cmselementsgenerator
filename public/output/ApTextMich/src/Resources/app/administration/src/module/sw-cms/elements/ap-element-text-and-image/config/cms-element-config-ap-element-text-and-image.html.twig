{% block ap_element_text_and_image_config %}
    <sw-container>
            <sw-text-field
              v-model="element.config.title.value"
              :label="$tc('sw-cms.elements.image.config.titleLabel.title')"
              :placeholder="$tc('sw-cms.elements.image.config.placeholder.enterMinHeight')"
              @input="emitChanges"
        />
        </sw-text-field>
        <sw-text-editor
              v-model="element.config.content.value"
              :label="$tc('sw-cms.elements.image.config.contentLabel.content')"
              :allow-inline-data-mapping="true"
              sanitize-input
              @input="emitChanges"
              @blur="emitChanges"
        />
        <sw-media-field
              v-model="element.config.headimage"
              :label="$tc('sw-cms.elements.image.config.headimageLabel.headimage')"
              @input="emitChanges"
              @blur="emitChanges">
        </sw-media-field>
        <sw-cms-mapping-field
                v-model="element.config.secondary image"
                :label="$tc('sw-cms.elements.image.label')"
                value-types="entity"
                entity="media"
        >
            <sw-media-upload-v2
                variant="regular"
                :upload-tag="uploadTag"
                :source="previewSource"
                :allow-multi-select="false"
                 :default-folder="cmsPageState.secondary image"
                :caption="$tc('sw-cms.elements.general.config.caption.mediaUpload')"
                @media-upload-sidebar-open="onOpenMediaModal"
                @media-upload-remove-image="onImageRemove"
            />
            <sw-upload-listener
                :upload-tag="uploadTag"
                auto-upload
                @media-upload-finish="onImageUpload"
            />
        
            <sw-media-modal-v2
                v-if="mediaModalIsOpen"
                variant="regular"
                :caption="$tc('sw-cms.elements.general.config.caption.mediaUpload')"
                :entity-context="cmsPageState.secondary image"
                :allow-multi-select="false"
                :initial-folder-id="cmsPageState.defaultMediaFolderId"
                @media-upload-remove-image="onImageRemove"
                @media-modal-selection-change="onSelectionChanges"
                @modal-close="onCloseModal"
            >
            </sw-media-modal-v2>
        
        </sw-cms-mapping-field>
        <sw-switch-field
              v-model="element.config.itsOpen.value"
              :label=$tc('sw-cms.elements.vimeoVideo.config.label.itsOpen')"
        />
        </sw-switch-field>
        <sw-checkbox-field
              v-model="element.config.isHover.value"
              :label=$tc('sw-cms.elements.vimeoVideo.config.label.isHover')"
        />
        </sw-checkbox-field>
        <sw-colorpicker
              v-model=element.config.headlineColor.value"
              :label="$tc('sw-cms.elements.vimeoVideo.config.label.controlsColor')"
              color-output=hex"
        />
        </sw-colorpicker>
    </sw-container>
{% endblock %}