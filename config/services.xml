<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!-- Parameterdefinitionen -->
    <parameters>
        <parameter key="output_folder" type="string">%kernel.project_dir%/public/output</parameter>
    </parameters>

    <!-- Services -->
    <services>
        <!-- Default-Konfiguration fÃ¼r alle Services -->
        <defaults autowire="true" autoconfigure="true"/>

        <!-- Spezifische Services -->
        <service id="App\Service\FileCreationService" public="true">
            <argument type="collection">
                <argument type="service" id="App\Service\CmsElementFilesContent\CreateMainJs"/>
                <argument type="service" id="App\Service\CmsElementFilesContent\CreateTwigDatei"/>
            </argument>
        </service>
        <service id="App\Service\CmsElementFilesContent\CreateMainJs" public="true"/>
        <service id="App\Service\CmsElementFilesContent\CreateTwigDatei" public="true"/>
        <service id="App\Service\CmsElementFolderStructure" public="true">
            <argument key="$output_folder" type="string">%output_folder%</argument>
        </service>

        <prototype namespace="App\" resource="../src/*">
            <exclude>../src/DependencyInjection/</exclude>
            <exclude>../src/Entity/</exclude>
            <exclude>../src/Kernel.php</exclude>
            <exclude>../src/Service/CmsElementFileCreation.php</exclude>
            <exclude>../src/Service/CmsElementFolderStructure.php</exclude>
        </prototype>
    </services>
</container>
