<?xml version="1.0" encoding="UTF-8" ?>

<!-- services.xml -->
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
    http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!-- Use parameters for application configuration -->
    <parameters>
        <parameter key="output_folder" type="string">%kernel.project_dir%/public/output</parameter>
    </parameters>

    <services>
        <!-- Default configuration for services in this file -->
        <defaults autowire="true" autoconfigure="true" />

        <!-- Service Definitions -->
        <service id="App\Service\CreateMainJs">
            <tag name="app.file_creator"/>
        </service>

        <service id="App\Service\FileCreationService">
            <argument type="service" id="!tagged_iterator app.file_creator"/>
        </service>

        <!-- Makes classes in src/ available to be used as services -->
        <prototype namespace="App\" resource="../src/" exclude="../src/{DependencyInjection,Entity,Kernel.php}"/>

        <!-- Add more service definitions when explicit configuration is needed -->
    </services>



</container>
